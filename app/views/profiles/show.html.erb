<h1>Profile</h1>

<h2><%= @user.user_name %></h2>
<p>
	<%= @user.email %>
</p>

<% if current_user.id != @user.id %>

	<% if @already_sent %>
		<p>request already sent</p>
	<% else %>
		<%= form_for FriendRequest.new do |f| %>
			<div><%= f.hidden_field :to, :value => @user.id %></div>
			<div><%= f.submit "send friend request" %></div>
		<% end %>
	<% end %>
	

<% end %>
